<%= form_with(model: anime, local: true) do |f| %>
  <% if anime.errors.any? %>
    <div id="error_explanation">
        <ul>
          <% anime.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
  
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>

  <%= f.submit "登録" %>
<% end %>